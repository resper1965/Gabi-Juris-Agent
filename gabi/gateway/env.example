# =============================================================================
# CONFIGURAÇÕES DO SERVIDOR
# =============================================================================

# Porta do servidor
PORT=3001

# Ambiente de execução
NODE_ENV=development

# Versão da aplicação
npm_package_version=1.0.0

# =============================================================================
# CONFIGURAÇÕES DO SUPABASE
# =============================================================================

# URL do projeto Supabase
SUPABASE_URL=https://your-project.supabase.co

# Service Role Key (para operações administrativas)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Anon Key (para operações do cliente)
SUPABASE_ANON_KEY=your_anon_key_here

# =============================================================================
# CONFIGURAÇÕES DE WEBHOOK
# =============================================================================

# API Key para autenticação de webhooks do n8n
N8N_WEBHOOK_API_KEY=n8n-secret

# API Key para comunicação interna entre serviços
INTERNAL_API_KEY=internal-key

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =============================================================================

# Origens permitidas para CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT Secret para tokens
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# =============================================================================

# URL de conexão com o banco PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/gabi_database"

# =============================================================================
# CONFIGURAÇÕES DE LOG
# =============================================================================

# Nível de log
LOG_LEVEL=info

# Formato de log (json ou simple)
LOG_FORMAT=json

# =============================================================================
# CONFIGURAÇÕES DE PERFORMANCE
# =============================================================================

# Tamanho máximo de payload (em bytes)
MAX_PAYLOAD_SIZE=10485760

# Timeout para vetorização (em ms)
VECTORIZATION_TIMEOUT=300000

# =============================================================================
# CONFIGURAÇÕES DE RATE LIMITING
# =============================================================================

# Janela de tempo para rate limiting (em ms)
RATE_LIMIT_WINDOW=60000

# Número máximo de requisições por janela
RATE_LIMIT_MAX=100

# =============================================================================
# CONFIGURAÇÕES DE RETRY
# =============================================================================

# Número máximo de tentativas
RETRY_ATTEMPTS=3

# Delay entre tentativas (em ms)
RETRY_DELAY=5000

# =============================================================================
# CONFIGURAÇÕES DE MONITORAMENTO
# =============================================================================

# URL do serviço de monitoramento (opcional)
MONITORING_URL=

# API Key do serviço de monitoramento (opcional)
MONITORING_API_KEY=

# =============================================================================
# CONFIGURAÇÕES DE EMAIL (opcional)
# =============================================================================

# Servidor SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# =============================================================================
# CONFIGURAÇÕES DE SLACK (opcional)
# =============================================================================

# Webhook URL do Slack
SLACK_WEBHOOK_URL=

# =============================================================================
# CONFIGURAÇÕES DE CACHE (opcional)
# =============================================================================

# URL do Redis
REDIS_URL=redis://localhost:6379

# =============================================================================
# CONFIGURAÇÕES DE ARMAZENAMENTO
# =============================================================================

# Bucket do Supabase para arquivos
STORAGE_BUCKET=gabi-documents

# Região do bucket
STORAGE_REGION=us-east-1

# =============================================================================
# CONFIGURAÇÕES DE VETORIZAÇÃO
# =============================================================================

# URL do serviço de vetorização
VECTORIZATION_SERVICE_URL=http://localhost:3002

# API Key do serviço de vetorização
VECTORIZATION_API_KEY=vectorization-key

# =============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =============================================================================

# Habilitar logs detalhados
DEBUG=webhook:*,auth:*

# Habilitar modo de desenvolvimento
DEV_MODE=true

# =============================================================================
# CONFIGURAÇÕES DE TESTE
# =============================================================================

# URL do banco de teste
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/gabi_test"

# API Key para testes
TEST_API_KEY=test-key

# =============================================================================
# CONFIGURAÇÕES DE PRODUÇÃO
# =============================================================================

# Habilitar HTTPS
FORCE_HTTPS=false

# Configuração de proxy
TRUST_PROXY=true

# Configuração de compressão
COMPRESSION_LEVEL=6

# =============================================================================
# CONFIGURAÇÕES DE BACKUP
# =============================================================================

# Frequência de backup (em horas)
BACKUP_INTERVAL=24

# Retenção de backups (em dias)
BACKUP_RETENTION=30

# =============================================================================
# CONFIGURAÇÕES DE ALERTAS
# =============================================================================

# Limite de erros para alerta
ERROR_THRESHOLD=10

# Intervalo de verificação de alertas (em minutos)
ALERT_CHECK_INTERVAL=5

# =============================================================================
# CONFIGURAÇÕES DE MÉTRICAS
# =============================================================================

# Habilitar coleta de métricas
ENABLE_METRICS=true

# Porta para métricas
METRICS_PORT=9090

# =============================================================================
# CONFIGURAÇÕES DE HEALTH CHECK
# =============================================================================

# Intervalo de health check (em segundos)
HEALTH_CHECK_INTERVAL=30

# Timeout do health check (em segundos)
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# CONFIGURAÇÕES DE CORS AVANÇADAS
# =============================================================================

# Credenciais CORS
CORS_CREDENTIALS=true

# Métodos permitidos
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Headers permitidos
CORS_HEADERS=Content-Type,Authorization,x-api-key

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA AVANÇADAS
# =============================================================================

# Política de segurança de conteúdo
CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"

# Headers de segurança
SECURITY_HEADERS=true

# =============================================================================
# CONFIGURAÇÕES DE LOGS AVANÇADAS
# =============================================================================

# Formato de timestamp
TIMESTAMP_FORMAT=ISO

# Incluir stack trace em erros
INCLUDE_STACK_TRACE=true

# Filtrar logs sensíveis
FILTER_SENSITIVE_DATA=true 