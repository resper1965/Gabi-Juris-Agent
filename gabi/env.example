# =============================================================================
# CONFIGURAÇÕES GERAIS
# =============================================================================

# Ambiente de execução
NODE_ENV=production

# Portas dos serviços
FRONTEND_PORT=5173
GATEWAY_PORT=3001

# =============================================================================
# CONFIGURAÇÕES DO FRONTEND
# =============================================================================

# URL da API Gateway
VITE_API_BASE_URL=https://api.seu-dominio.com/api/v1

# Configurações do Supabase (Frontend)
VITE_SUPABASE_URL=https://seu-projeto.supabase.co
VITE_SUPABASE_ANON_KEY=sua-anon-key-aqui

# =============================================================================
# CONFIGURAÇÕES DO GATEWAY
# =============================================================================

# Configurações do servidor
PORT=3001
HOST=0.0.0.0

# Configurações do Supabase (Gateway)
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_ANON_KEY=sua-anon-key-aqui
SUPABASE_SERVICE_ROLE_KEY=sua-service-role-key-aqui

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =============================================================================

# JWT Secret (64 caracteres recomendado)
JWT_SECRET=seu-jwt-secret-super-seguro-64-caracteres-aqui

# Origens permitidas para CORS
ALLOWED_ORIGINS=https://seu-dominio.com,https://www.seu-dominio.com

# =============================================================================
# CONFIGURAÇÕES DE RATE LIMITING
# =============================================================================

# Janela de tempo para rate limiting (em ms)
RATE_LIMIT_WINDOW=900000

# Número máximo de requisições por janela
RATE_LIMIT_MAX=100

# =============================================================================
# CONFIGURAÇÕES DE LOG
# =============================================================================

# Nível de log
LOG_LEVEL=info

# Formato de log
LOG_FORMAT=json

# =============================================================================
# CONFIGURAÇÕES DE PERFORMANCE
# =============================================================================

# Tamanho máximo de payload (em bytes)
MAX_PAYLOAD_SIZE=10485760

# Timeout para requisições (em ms)
REQUEST_TIMEOUT=300000

# =============================================================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# =============================================================================

# URL de conexão com o banco PostgreSQL (Supabase)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# =============================================================================
# CONFIGURAÇÕES DE ARMAZENAMENTO
# =============================================================================

# Bucket do Supabase para arquivos
STORAGE_BUCKET=gabi-documents

# Região do bucket
STORAGE_REGION=us-east-1

# =============================================================================
# CONFIGURAÇÕES DE EMAIL (opcional)
# =============================================================================

# Servidor SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app

# =============================================================================
# CONFIGURAÇÕES DE MONITORAMENTO (opcional)
# =============================================================================

# URL do serviço de monitoramento
MONITORING_URL=

# API Key do serviço de monitoramento
MONITORING_API_KEY=

# =============================================================================
# CONFIGURAÇÕES DE BACKUP
# =============================================================================

# Frequência de backup (em horas)
BACKUP_INTERVAL=24

# Retenção de backups (em dias)
BACKUP_RETENTION=30

# =============================================================================
# CONFIGURAÇÕES DE ALERTAS
# =============================================================================

# Limite de erros para alerta
ERROR_THRESHOLD=10

# Intervalo de verificação de alertas (em minutos)
ALERT_CHECK_INTERVAL=5

# =============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =============================================================================

# Habilitar logs detalhados
DEBUG=false

# Habilitar modo de desenvolvimento
DEV_MODE=false

# =============================================================================
# CONFIGURAÇÕES DE PRODUÇÃO
# =============================================================================

# Habilitar HTTPS
FORCE_HTTPS=true

# Configuração de proxy
TRUST_PROXY=true

# Configuração de compressão
COMPRESSION_LEVEL=6 